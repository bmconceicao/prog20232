print("Esse porgrama visa confugurar um microscópio para fornecer imagens de cortes ópticos")

zoomMicroscopio = int (input("Qual o zoom do microscópio? Colocar entre 0 e 100%"))
print("Houve alteração na variável inserida?")
print(zoomMicroscopio != 100)

formatoImagem = input("Digite o tamanho da imagem")
print("Houve alteração na variável inserida?")
print(formatoImagem !="512X512")

velocidade =  int (input("Qual velocidade de leitura das linhas que você deseja? vai de 10 a 1400HZ"))
print("Houve alteração na variável inserida?")
print(velocidade !=400)

corImagem = input("Qual a cor que você deseja usar?")
print("Houve alteração na variável inserida?")
print(corImagem !="azul")

pixel = int (input("Defina os pixels da imagem entre 0 e 500"))
print("Houve alteração na variável inserida?")
print(pixel !=480)

potencia = int (input("Qual potência deseja definir? Vai de 0 a 100"))
print("Houve alteração na variável inserida?")
print(potencia !=100)

zoomFactore = int (input("Qual ZoomFactore deseja definir? Vai de 0 a 10"))
print("Houve alteração na variável inserida?")
print(zoomFactore !=100)

varredura = int (input("Quantas vezes deseja realizar a varredura? Vai de 0 a 10"))
print("Houve alteração na variável inserida?")
print(varredura !=1)

tipoCelula = input("Qual o tipo de célula investigada?")
print("Houve alteração na variável inserida?")
print(tipoCelula !="neurônio")

rotacao = int (input("Qual a angulação desejada? Vai de 0 a 360º"))
print("Houve alteração na variável inserida?")
print(rotacao !=0)

print("As informações de configurações setadas pelo usuário são:")
